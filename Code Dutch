//Deze code gebruikt een knop ipv sensor,
//was om te testen of alles wel zou werken
//en het is gewoon een kwestie van het vervangen door een
//sensor.


#include <Servo.h>	 //Library
Servo voor;	//Servomotor 1
Servo achter;	//Servomotor 2
int LED_GROEN_1 = 2; //Pin van de eerste groene LED
int LED_ROOD_1 = 3; //Pin van de eerste rode LED
int LED_GROEN_2 = 7; //Pin van de tweede groene LED
int LED_ROOD_2 = 8; //Pin van de tweewde rode LED
int KNOP = 4; //Pin van de knop
int Trein = 0; //Trein servomotor
int Start = 90; //Startpositie servomotor


void setup() {
	//Zeggen op welke pinnen er spanning moet staan
	pinMode(LED_GROEN_1, OUTPUT);
  	pinMode(LED_ROOD_1, OUTPUT);
    pinMode(LED_GROEN_2, OUTPUT);
    pinMode(LED_ROOD_2, OUTPUT);
	//Zeggen op welke pinnen er "signaal" moet ontvangen worden
  	pinMode(KNOP, INPUT);
	//Zeggen op welke pinnen de servomotors zitten
    voor.attach(6);
    achter.attach(5);
}

void loop()
{
    if (digitalRead(KNOP) == HIGH) {
    voor.write(Trein);
    achter.write(Trein);
    digitalWrite(LED_ROOD_1, HIGH);
    digitalWrite(LED_GROEN_1, LOW);
    digitalWrite(LED_ROOD_2, HIGH);
    digitalWrite(LED_GROEN_2, LOW);
    delay(15000);
    voor.write(Start);
    achter.write(Start);
    } else {
    digitalWrite(LED_ROOD_1, LOW);
    digitalWrite(LED_GROEN_1, HIGH);
    digitalWrite(LED_ROOD_2, LOW);
    digitalWrite(LED_GROEN_2, HIGH);
  }
}
